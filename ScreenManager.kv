		valign: 'middle'
	Label:
		markup: True
		text: "Your task"
		color: 0, 0, 0, 1
		font_size: 25
		pos_hint: {"x": 0, "y": .38}
		halign: 'center'
		valign: 'middle'
	TextInput:
		id: description
		text: ' '
		multiline: False
		size_hint_y: .05
		size_hint_x: .3
		pos_hint: {"x": .35, "y": .8}
	Button:
		background_normal: ''
		background_color: .4, .6, .6, 1
		text: 'Main'
		size_hint: None, None
		pos_hint: {'right': 1}
		size: 150, 50
		on_release: root.manager.current = "Main"
	Button:
		background_normal: ''
		background_color: .4, .6, .6, 1
		text: 'Back'
		size_hint: None, None
		size: 150, 50
		on_release: root.manager.current = "Add"
	Label:
		markup: True
		text: "Select date"
		color: 0, 0, 0, 1
		font_size: 25
		pos_hint: {"x": 0, "y": .26}
		halign: 'center'
		valign: 'middle'
	DatePicker:
		pHint: 1,1
		size_hint_x: .15
		size_hint_y: .1
		pos_hint: {"x": .425, "y": .62}
		id: date_task	
	Label:
		markup: True
		text: "Input time (HH:MM)"
		color: 0, 0, 0, 1
		font_size: 25
		pos_hint: {"x": 0, "y": .07}
	TextInput:
		id: time_task
		text: ' '
		multiline: False
		size_hint_y: .05
		size_hint_x: .3
		pos_hint: {"x": .35, "y": .47}
	Button:
		background_normal: ''
		background_color: .4, .6, .6, 1
		text: 'Save'
		size_hint: None, None
		size: 150, 50
		pos_hint: {"x": .41, "y": .3}
		on_release: root.manager.current = "Main"
		on_press: root.save(root.category, description.text, date_task.text, time_task.text)